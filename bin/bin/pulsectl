#!/bin/bash

function get_pa_sink {
    pactl list | grep Sink | awk '/Sink/{print $2}' | grep \# | sed s/\#//
}

function fix_pulse {
  ORIG_VOLUME=$(pacmd list-sinks|grep -A 15 "* index: "| \
                awk '/volume: front/{ print $5 }' | sed 's/%//g')
  for i in $SINKS; do
    pactl set-sink-volume "$i" "${ORIG_VOLUME}%"
  done
}

function pa_down {
    for i in $SINKS; do
        pactl set-sink-volume "$i" -1%
    done
}

function pa_up {
    for i in $SINKS; do
        VOLUME=$(pacmd list-sinks|grep -A 15 "index: $i"| \
            awk '/volume: front/{ print $5 }' | sed 's/%//g')
        END=$((VOLUME + 1))
        if [ $END -gt 24 ]
            then if [ $END -lt 21 ] ; then
                    pactl set-sink-volume "$i" +$((20 - VOLUME))%
            else
                exit 2
            fi
        else
            pactl set-sink-volume "$i" +5%
    fi
    done
}

function pa_force_up {
    for i in $SINKS; do 
        pactl set-sink-volume "$i" +5%
    done
}

function pa_mute {
    for i in $SINKS; do
       pactl set-sink-mute "$i" toggle
   done
}

SINKS=$(get_pa_sink)
export SINKS

if [[ $(echo "$SINKS" | wc -l) -gt 1 ]]; then 
  fix_pulse
fi

case "$1" in
    down)
        pa_down
        ;;
    up)
        pa_up
        ;;
    force)
        pa_force_up
        ;;
    mute)
        pa_mute
        ;;
    *)
        echo "Usage: $0 {up|down|force|mute}"
        exit 1
esac
